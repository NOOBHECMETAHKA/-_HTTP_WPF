            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountBox"/>
                        <TextBlock>Клиенты</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <!--Страница-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition/>
                                <RowDefinition Height="0.25*"/>
                            </Grid.RowDefinitions>
                            <!--Datagrid-->
                            <Grid Margin="40 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <DataGrid x:Name="dg_Client" SelectionChanged="dg_Client_SelectionChanged" Loaded="datagrids_Loaded" Grid.Row="0" Grid.ColumnSpan="3" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" ItemsSource="{Binding Clients}" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IdClient}" Width="*"/>
                                        <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                                        <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                                        <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="*"/>
                                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                                        <DataGridTextColumn Header="Удален" Visibility="Hidden" Binding="{Binding IsDeleted}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button x:Name="bt_PaginationUser_Back" Click="bt_PaginationUser_Click" Content="Назад" Grid.Row="1" Grid.Column="0"/>
                                <TextBlock x:Name="lb_PageUsers" Text="1" TextAlignment="Center" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"/>
                                <Button x:Name="bt_PagenationUser_Forward" Click="bt_PaginationUser_Click" Content="Вперёд" Grid.Row="1" Grid.Column="2"/>
                            </Grid>
                                <!--Datagrid-->
                            <!--Поля ввода-->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBox x:Name="tb_FirstName" FontSize="18" materialDesign:HintAssist.Hint="Фамилия" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_LastName" FontSize="18" materialDesign:HintAssist.Hint="Имя" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBox x:Name="tb_Email" FontSize="18" materialDesign:HintAssist.Hint="Электронная почта" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_NumberPhone" FontSize="18" materialDesign:HintAssist.Hint="Номер телефона" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                            </Grid>
                            <!--Поля ввода-->
                            <!--Кнопки CRUD-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="bt_InsertUser" Click="bt_InsertUser_Click"  Content="Добавить" Margin="20 0" Grid.Column="0"/>
                                <Button x:Name="bt_UpdateUser" Click="bt_UpdateUser_Click" Content="Изменить" Margin="20 0" Grid.Column="1"/>
                                <Button x:Name="tb_DeleteUser" Click="tb_DeleteUser_Click" Background="Red" Content="Удалить" Margin="20 0" Grid.Column="2"/>
                            </Grid>
                            <!--Кнопки CRUD-->
                        </Grid>
                        <!--Страница-->
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="map"/>
                        <TextBlock>Адреса</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <!--Страница-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition/>
                                <RowDefinition Height="0.25*"/>
                            </Grid.RowDefinitions>
                            <!--Datagrid-->
                            <Grid Margin="40 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <DataGrid x:Name="dg_Address" Loaded="datagrids_Loaded" Grid.Row="0" Grid.ColumnSpan="3" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" IsReadOnly="True" ItemsSource="{Binding Addresses}" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IdAddress}" Width="*"/>
                                        <DataGridTextColumn Header="Город" Binding="{Binding City}" Width="*"/>
                                        <DataGridTextColumn Header="Улица" Binding="{Binding Street}" Width="*"/>
                                        <DataGridTextColumn Header="Номер дома" Binding="{Binding NumberBuild}" Width="*"/>
                                        <DataGridTextColumn Header="Подъезд" Binding="{Binding Entrance}" Width="*"/>
                                        <DataGridTextColumn Header="Номер квартиры" Binding="{Binding NumberFlat}" Width="*"/>
                                        <DataGridTextColumn Header="Комментарий" Binding="{Binding Сomment}" Width="*"/>
                                        <DataGridTextColumn Header="Id клиента" Visibility="Hidden" Binding="{Binding СlientId}" Width="*"/>
                                        <DataGridTextColumn Header="Удален" Visibility="Hidden" Binding="{Binding IsDeleted}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button x:Name="bt_PaginationAddressBack" Click="bt_PaginationAddress_Click" Content="Назад" Grid.Row="1" Grid.Column="0"/>
                                <TextBlock x:Name="lb_Addresses" Text="1" TextAlignment="Center" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"/>
                                <Button x:Name="bt_PaginationAddressForwart" Click="bt_PaginationAddress_Click" Content="Вперёд" Grid.Row="1" Grid.Column="2"/>
                            </Grid>
                            <!--Datagrid-->
                            <!--Поля ввода-->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBox x:Name="tb_Address_City" FontSize="18" materialDesign:HintAssist.Hint="Город" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Address_Street" FontSize="18" materialDesign:HintAssist.Hint="Улица" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Address_Number_House" FontSize="18" materialDesign:HintAssist.Hint="Номер здания" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Address_Entrance" FontSize="18" materialDesign:HintAssist.Hint="Подъезд" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBox x:Name="tb_Address_NumberFlat" FontSize="18" materialDesign:HintAssist.Hint="Номер квартиры" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Address_Comment" FontSize="18" materialDesign:HintAssist.Hint="Комментарий" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <ComboBox x:Name="cb_Address_Client" ItemsSource="{Binding Clients}" DisplayMemberPath="Email" SelectedValuePath="IdClient" Loaded="cb_Address_Client_Loaded" FontSize="18" materialDesign:HintAssist.Hint="Клиент" Margin="20 10" Style="{DynamicResource MaterialDesignComboBox}"/>
                                </StackPanel>
                            </Grid>
                            <!--Поля ввода-->
                            <!--Кнопки CRUD-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="bt_Insert_Address" Click="bt_Insert_Address_Click" Content="Добавить" Margin="20 0" Grid.Column="0"/>
                                <Button x:Name="bt_Update_Address" Click="bt_Update_Address_Click" Content="Изменить" Margin="20 0" Grid.Column="1"/>
                                <Button x:Name="bt_Delete_Address" Click="bt_Delete_Address_Click" Background="Red" Content="Удалить" Margin="20 0" Grid.Column="2"/>
                            </Grid>
                            <!--Кнопки CRUD-->
                        </Grid>
                        <!--Страница-->
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileArrowLeftRightOutline"/>
                        <TextBlock>Заказы</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <!--Страница-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition/>
                                <RowDefinition Height="0.25*"/>
                            </Grid.RowDefinitions>
                            <!--Datagrid-->
                            <Grid Margin="40 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="0.25*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <DataGrid x:Name="dg_Order" ItemsSource="{Binding Orders}" Loaded="datagrids_Loaded" Grid.Row="0" Grid.ColumnSpan="3" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" IsReadOnly="True" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IdOrder}" Width="*"/>
                                        <DataGridTextColumn Header="Время создания" Binding="{Binding TimeCreate, StringFormat=hh\\:mm}" Width="*"/>
                                        <DataGridTextColumn Header="Дата создания" Binding="{Binding DateCreate, StringFormat=dd.MM.yyyy}" Width="*"/>
                                        <DataGridTextColumn Header="Id проекта" Visibility="Hidden" Binding="{Binding ProjectId}" Width="*"/>
                                        <DataGridTextColumn Header="Id контрагента" Visibility="Hidden" Binding="{Binding ContractorId}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Удален" Visibility="Hidden" Binding="{Binding IsDeleted}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button x:Name="bt_PaginationOrderBack" Click="bt_PaginationOrder_Click"  Content="Назад" Grid.Row="1" Grid.Column="0" />
                                <TextBlock x:Name="lb_Orders" Text="1" TextAlignment="Center" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" />
                                <Button x:Name="bt_PaginationOrderForward" Click="bt_PaginationOrder_Click" Content="Вперёд" Grid.Row="1" Grid.Column="2" />
                            </Grid>
                            <!--Datagrid-->
                            <!--Поля ввода-->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <DatePicker Name="dp_DateCreated" FontSize="18" materialDesign:HintAssist.Hint="Дата создания" Margin="20 10" Style="{DynamicResource MaterialDesignDatePicker}"/>
                                    <TextBox Name="tb_TimeOrderCreated" FontSize="18" materialDesign:HintAssist.Hint="Время создания" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <ComboBox Name="cd_Order_Contractor" Loaded="cd_Order_Contractor_Loaded" ItemsSource="{Binding ContractorsList}" DisplayMemberPath="Tin" SelectedValuePath="IdContractor" FontSize="18" materialDesign:HintAssist.Hint="Подрядчик" Margin="20 10" Style="{DynamicResource MaterialDesignComboBox}"/>
                                    <ComboBox Name="cd_Order_Project" Loaded="cd_Order_Project_Loaded" ItemsSource="{Binding ProjectsList}" DisplayMemberPath="Name" SelectedValuePath="IdProject" FontSize="18" materialDesign:HintAssist.Hint="Проект" Margin="20 10" Style="{DynamicResource MaterialDesignComboBox}"/>
                                </StackPanel>
                            </Grid>
                            <!--Поля ввода-->
                            <!--Кнопки CRUD-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="Insert_Order" Click="Insert_Order_Click" Content="Добавить" Margin="20 0" Grid.Column="0"/>
                                <Button x:Name="Update_Order" Click="Update_Order_Click" Content="Изменить" Margin="20 0" Grid.Column="1"/>
                                <Button x:Name="Delete_Order" Click="Delete_Order_Click" Background="Red" Content="Удалить" Margin="20 0" Grid.Column="2"/>
                            </Grid>
                            <!--Кнопки CRUD-->
                        </Grid>
                        <!--Страница-->
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountAlert"/>
                        <TextBlock>Подрядчики</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <!--Страница-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition/>
                                <RowDefinition Height="0.25*"/>
                            </Grid.RowDefinitions>
                            <!--Datagrid-->
                            <Grid Margin="40 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="0.25*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <DataGrid x:Name="dg_contractor" ItemsSource="{Binding ContractorsList}" Loaded="datagrids_Loaded" Grid.Row="0" Grid.ColumnSpan="3" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" IsReadOnly="True" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IdContractor}" Width="*"/>
                                        <DataGridTextColumn Header="ИНН" Binding="{Binding Tin}" Width="*"/>
                                        <DataGridTextColumn Header="ОГРН" Binding="{Binding Ogrn}" Width="*"/>
                                        <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                                        <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                                        <DataGridTextColumn Header="Номер телефона" Binding="{Binding PhoneNumber}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Удален" Visibility="Hidden" Binding="{Binding IsDeleted}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button x:Name="bt_PaginationContractorBack" Click="bt_PaginationContractor_Click" Content="Назад" Grid.Row="1" Grid.Column="0" />
                                <TextBlock x:Name="lb_Contractors" Text="1" TextAlignment="Center" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" />
                                <Button x:Name="bt_PaginationContractorForward" Click="bt_PaginationContractor_Click" Content="Вперёд" Grid.Row="1" Grid.Column="2" />
                            </Grid>
                            <!--Datagrid-->
                            <!--Поля ввода-->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBox x:Name="tb_Contractor_FirstName" FontSize="18" materialDesign:HintAssist.Hint="Фамилия" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Contractor_LastName" FontSize="18" materialDesign:HintAssist.Hint="Имя" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBox x:Name="tb_Contractor_NumberPhone" FontSize="18" materialDesign:HintAssist.Hint="Номер телефона" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Contractor_TIN" FontSize="18" materialDesign:HintAssist.Hint="ИНН" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Contractor_OGTN" FontSize="18" materialDesign:HintAssist.Hint="ОГРН" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                            </Grid>
                            <!--Поля ввода-->
                            <!--Кнопки CRUD-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="Insert_Contractor" Click="Insert_Contractor_Click" Content="Добавить" Margin="20 0" Grid.Column="0"/>
                                <Button x:Name="Update_Contractor" Click="Update_Contractor_Click" Content="Изменить" Margin="20 0" Grid.Column="1"/>
                                <Button x:Name="Delete_Contractor" Click="Delete_Contractor_Click" Background="Red" Content="Удалить" Margin="20 0" Grid.Column="2"/>
                            </Grid>
                            <!--Кнопки CRUD-->
                        </Grid>
                        <!--Страница-->
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="cash"/>
                        <TextBlock>Расходы</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <!--Страница-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition/>
                                <RowDefinition Height="0.25*"/>
                            </Grid.RowDefinitions>
                            <!--Datagrid-->
                            <Grid Margin="40 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="0.25*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <DataGrid x:Name="dg_consumption" ItemsSource="{Binding Consumptions}" Loaded="datagrids_Loaded" Grid.Row="0" Grid.ColumnSpan="3" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" IsReadOnly="True" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IdConsumption}" Width="*"/>
                                        <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                                        <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}" Width="*"/>
                                        <DataGridTextColumn Header="Время оплаты" Binding="{Binding TimePayment, StringFormat=HH:mm}" Width="*"/>
                                        <DataGridTextColumn Header="Дата оплаты" Binding="{Binding DatePayment, StringFormat=dd.MM.yyyy}" Width="*"/>
                                        <DataGridTextColumn Header="Id проекта" Visibility="Hidden" Binding="{Binding ProjectId}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Удален" Visibility="Hidden" Binding="{Binding IsDeleted}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button x:Name="bt_PaginationConsumptionBack" Click="bt_PaginationConsumption_Click" Content="Назад" Grid.Row="1" Grid.Column="0" />
                                <TextBlock x:Name="lb_Consumptions" Text="1" TextAlignment="Center" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" />
                                <Button x:Name="bt_PaginationConsumptionForward" Click="bt_PaginationConsumption_Click" Content="Вперёд" Grid.Row="1" Grid.Column="2" />
                            </Grid>
                            <!--Datagrid-->
                            <!--Поля ввода-->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBox x:Name="tb_nameConsumption" FontSize="18" materialDesign:HintAssist.Hint="Наименование" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_descriptionConsumption" FontSize="18" materialDesign:HintAssist.Hint="Описание" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox x:Name="tb_Amount" FontSize="18" materialDesign:HintAssist.Hint="Общая сумма" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <DatePicker x:Name="dp_ConsumptionDate" FontSize="18" materialDesign:HintAssist.Hint="Дата совершения" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintDatePicker}"/>
                                    <TextBox x:Name="tb_ConsumptionTime" FontSize="18" materialDesign:HintAssist.Hint="Время совершения" Margin="20 10" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                                    <ComboBox Name="cb_Project" Loaded="cb_ProjectLoaded" ItemsSource="{Binding ProjectsList}" DisplayMemberPath="Name" SelectedValuePath="IdProject" FontSize="18" materialDesign:HintAssist.Hint="Проект" Margin="20 10" Style="{DynamicResource MaterialDesignComboBox}"/>
                                </StackPanel>
                            </Grid>
                            <!--Поля ввода-->
                            <!--Кнопки CRUD-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="bt_Insert_Consumption" Click="bt_Insert_Consumption_Click" Content="Добавить" Margin="20 0" Grid.Column="0"/>
                                <Button x:Name="bt_Update_Consumption" Click="bt_Update_Consumption_Click" Content="Изменить" Margin="20 0" Grid.Column="1"/>
                                <Button x:Name="bt_Delete_Consumption" Click="bt_Delete_Consumption_Click" Background="Red" Content="Удалить" Margin="20 0" Grid.Column="2"/>
                            </Grid>
                            <!--Кнопки CRUD-->
                        </Grid>
                        <!--Страница-->
                    </Grid>
                </TabItem.Content>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Settings"/>
                        <TextBlock>Настройки</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
